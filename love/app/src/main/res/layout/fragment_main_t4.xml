<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/main_t4_view_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white" />
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_icon_default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/black"
                android:textSize="@dimen/size_26"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="6dp" />

            <TextView
                android:id="@+id/main_t4_tv_btn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selectot_btn_red_crimson"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:paddingTop="6dp"
                android:paddingRight="24dp"
                android:paddingBottom="6dp"
                android:text="信息未完善"
                android:textColor="@color/select_color_red_crimson"
                android:textSize="@dimen/size_14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/main_t4_ll_iv_vip"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@mipmap/main_item_open_vip" />

    <com.yc.love.ui.view.MainMyItemLin
        android:id="@+id/main_t4_ll_item_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgSrc="@mipmap/main_icon_my_01"
        app:isAddIntervalTop="true"
        app:textNameMyItem="我的收藏" />

    <com.yc.love.ui.view.MainMyItemLin
        android:id="@+id/main_t4_ll_item_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgSrc="@mipmap/main_icon_my_02"
        app:isAddIntervalBom="true"
        app:isAddIntervalTop="true"
        app:textNameMyItem="使用帮助" />

    <com.yc.love.ui.view.MainMyItemLin
        android:id="@+id/main_t4_ll_item_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgSrc="@mipmap/main_icon_my_03"
        app:textNameMyItem="客服反馈" />

    <com.yc.love.ui.view.MainMyItemLin
        android:id="@+id/main_t4_ll_item_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgSrc="@mipmap/main_icon_my_04"
        app:isAddIntervalTop="true"
        app:textNameMyItem="设置" />
</LinearLayout>